// tags
body
	min-width 1200px
	// Meduim Desktops
	@media (min-width: 992px)
		body.responsive &
			min-width 992px
	// Handsets
	@media (max-width: 992px)
		body.responsive &
			min-width 320px
		
// Helpers
.clearfix, .clear
	clear:both

.container
	min-width 1200px
	margin 0 auto
	position relative
	zoom:1
	// Meduim Desktops
	@media (min-width: 992px)
		body.responsive &
			min-width 992px
	// Handsets
	@media (max-width: 992px)
		body.responsive &
			min-width 320px
	&::before, &::after
		content:""
		display:table
	&::after
		clear:both
.content-box
	padding-top 20px !important
	padding-bottom 20px !important

.hang-left
	margin-left -15px
	margin-right -15px
.hang-right
	margin-left 0
	margin-right -15px
.hang
	margin-left -15px
	margin-right -15px
.no-hang
	margin-left 0
	margin-right 0

// mixins
clearfix()
	zoom:1
	&::before, &::after
		content:""
		display:table
	&::after
		clear:both
col(n)
	n ?= 1
	box-sizing border-box
	display block
	float: left
	padding 0 15px
	position relative
	width: ss-column-width * n
	&:hover
		body.dev &
			outline 1px dotted #ccc

shiftRight(n)
	n ?= 0
	left: ss-column-width * n
shiftLeft(n)
	n ?= 0
	right: ss-column-width * n