// mixins
getColumnWidth(c)
	return (100% / c)
clearfix()
	zoom:1
	&::before, &::after
		content:""
		display:table
	&::after
		clear:both
col(n=1, c=12)
	box-sizing border-box
	display block
	float: left
	padding 0 15px
	position relative
	width: (100% / c) * n
	&:hover
		body.dev &
			outline 1px dotted #ccc

offset(n=0, c=12)
	margin-left getColumnWidth(c) * n
shift(n=0, c=12)
	left getColumnWidth(c) * n

// Obsolete
shiftRight(n=0)
	shift n
shiftLeft(n=0)
	shift n * (-1)

setContentBounds(default=1200px, handsets=320px)
	min-width default
	// Meduim Desktops
	@media (min-width: 992px)
		body.responsive &
			max-width none
		
	// Handsets
	@media (max-width: 992px)
		&.responsive
			min-width handsets
	
		
// Helpers
.clearfix, .clear
	clear:both

.content-box
	padding-top 20px !important
	padding-bottom 20px !important

.hang-left
	margin-left -15px
	margin-right -15px
.hang-right
	margin-left 0
	margin-right -15px
.hang
	margin-left -15px
	margin-right -15px
.no-hang
	margin-left 0
	margin-right 0